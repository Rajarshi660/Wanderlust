<% layout("/layout/boilerplate") %>

<style>
  .hero-container {
    height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background-color: #ffffff;
    overflow: hidden;
  }

  /* 1. Animation for Wanderlust Title */
  .brand-title {
    font-size: 6rem;
    font-weight: 900;
    color: #fe424d;
    letter-spacing: -3px;
    margin-bottom: 0.5rem;
    font-family: 'Plus Jakarta Sans', sans-serif;
    
    /* Animation Properties */
    opacity: 0;
    transform: scale(0.8);
    animation: titleEntrance 1.2s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }

  /* 2. Animation for the Subtext */
  .animated-subtext {
    font-size: 1.6rem;
    color: #484848;
    margin-bottom: 3rem;
    font-weight: 300;
    
    /* Animation Properties */
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out forwards;
    animation-delay: 0.8s; /* Starts after title animation is well underway */
  }

  /* 3. Button Entrance */
  .explore-btn {
    padding: 0.9rem 3rem;
    font-size: 1.2rem;
    border-radius: 50px;
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
    animation-delay: 1.5s; /* Last to appear */
    transition: all 0.3s ease;
  }

  /* Keyframes */
  @keyframes titleEntrance {
    0% {
      opacity: 0;
      transform: scale(0.8) translateY(-20px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  /* Interactive Hover Effect */
  .explore-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(254, 66, 77, 0.3);
    background-color: #d93943 !important;
  }
</style>

<div class="hero-container">
  <h1 class="brand-title">Wanderlust</h1>
  
  <p class="animated-subtext">
    Extraordinary homes. Unexpected experiences.
  </p>
  
  <a href="/listings" class="btn btn-danger explore-btn">
    Explore Now
  </a>
</div>