<% layout("/layout/boilerplate") %>

<div class="row mt-5 mb-5">
    <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2">
        <div class="auth-card shadow-lg p-4">
            <div class="auth-header text-center mb-4">
                <i class="fa-solid fa-user-plus fa-3x text-danger mb-3"></i>
                <h2 class="fw-bold">Join Wanderlust</h2>
                <p class="text-muted">Create an account to start your adventure</p>
            </div>

            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="text" class="form-control custom-input" required>
                    <div class="invalid-feedback">Please choose a username.</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" type="email" class="form-control custom-input" required>
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" class="form-control custom-input" required>
                    <div class="invalid-feedback">Please enter a password.</div>
                </div>

                <button class="btn btn-danger w-100 auth-btn">Sign Up</button>
            </form>

            <div class="text-center mt-4">
                <p class="text-muted">Already have an account? <a href="/login" class="text-danger text-decoration-none fw-bold">Login</a></p>
            </div>
        </div>
    </div>
</div>