<% layout("/layout/boilerplate") %>

<div class="row mt-5">
    <div class="col-md-6 offset-md-3">
        <div class="auth-card mx-auto">
            <h2>Welcome Back</h2>
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-4">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="text" class="form-control auth-input" placeholder="Enter username" required />
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" class="form-control auth-input" placeholder="Enter password" required />
                </div>
                <button class="btn auth-btn w-100">Login</button>
            </form>
            <div class="auth-footer">
                Don't have an account? <a href="/signup">Sign up</a>
            </div>
        </div>
    </div>
</div>